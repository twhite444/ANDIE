package cosc202.andie;

import.awt.Graphics2D;
import java.awt.image.*;



/**
 * <p>
 * ImageOperation to down size an image to 50% of the original
 * </p>
 * 
 * <p>
 * The images produced by this operation are half the size 
 * </p>
 * 
 * @author Tommo White
 * @version 1.0
 */
public class Rotate90Left implements ImageOperation, java.io.Serializable {

    /**
     * <p>
     * Create a new Resize50 operation.
     * </p>
     */
    Resize50() {

    }

    /**
     * <p>
     * Downsize image by 50%
     * </p>
     * 
     * <p>
     * The resize will halve the width and height of the image by condensing each axis contents
     * 
     * 
     * </p>
     * 
     * @param input The image to be resized
     * @return The resulting resized image.
     */
    public BufferedImage apply(BufferedImage input) {
        //downsize to 50%
        //create height (y), width (x) variables
        int newWidth = input.getWidth()/2; //(150% is same with *3/2)
        int newHeight = input.getHeight()/2;

        //initialize new image array
        BufferedImage resizedImage = new BufferedImage(newWidth, newHeight, input.getType());
        
        //intialize Graphics2D
        Graphics2D g2d = resizedImage.createGraphics();

        //run through each pixel using graphics 2d 
        g2d.drawImage(input.getScaledInstance(newWidth, newHeight, Image.SCALE_SMOOTH), 0, 0, null);
        
        //dispose of Graphics2D
        g2d.dispose();

        return resizedImage;
    }
}
    
